@page
@model BuildingMaterials.Pages.Facilities.DetailsModel

@{
    ViewData["Title"] = "Подробности";
}

<h1>Подробности</h1>

<div>
    <h4>Объект</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Facility.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Facility.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Facility.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Facility.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Facility.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Facility.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Facility.Registrations)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Наименование</th>
                    <th>Количество</th>
                    <th>Единица измерения</th>
                </tr>
                @foreach (var item in Model.Facility.Registrations)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Warehouse.Order.Material.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Unit)
                        </td>
                    </tr>
                }
            </table>
            <a href="#" class="btn btn-primary float-right">Скачать смету</a>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Facility.ID">Редактировать</a> |
    <a asp-page="./Index">Вернуться к списку</a>
</div>
